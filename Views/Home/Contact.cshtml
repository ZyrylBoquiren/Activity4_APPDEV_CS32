@model SimpleMvcFrontend.Models.Contact
@{
    Layout = "_Layout";
}

<h1>Contact Me</h1>

<form asp-action="Create" asp-controller="Contact" method="post">
    <label asp-for="Name">Name</label>
    <input asp-for="Name" type="text" placeholder="Your name" />

    <label asp-for="Email">Email</label>
    <input asp-for="Email" type="email" placeholder="Your email" />

    <label asp-for="Message">Message</label>
    <textarea asp-for="Message" placeholder="Your message"></textarea>

    <button type="submit">Send</button>
</form>
